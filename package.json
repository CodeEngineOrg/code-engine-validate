{
  "name": "@code-engine/validate",
  "version": "1.0.0",
  "description": "Validates user input for CodeEngine and its plugins",
  "keywords": [
    "code-engine",
    "validate",
    "validation",
    "input validation"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://engine.codes",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeEngineOrg/code-engine-validate.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage lib",
    "lint": "npm run lint:typescript && npm run lint:javascript",
    "lint:typescript": "tslint -p tsconfig.json",
    "lint:javascript": "eslint test",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "engines": {
    "node": ">=12.12"
  },
  "engineStrict": true,
  "devDependencies": {
    "@jsdevtools/eslint-config-modular": "^8.0.0",
    "@jsdevtools/tslint-modular": "^2.0.2",
    "@jsdevtools/version-bump-prompt": "^6.0.2",
    "@types/chai": "^4.2.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "mocha": "^7.1.0",
    "npm-check": "^5.9.0",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.16",
    "tslint": "^6.0.0",
    "typescript": "^3.7.3",
    "typescript-tslint-plugin": "^0.5.5"
  },
  "dependencies": {
    "@code-engine/stringify": "^1.0.1",
    "@jsdevtools/ono": "^7.1.0"
  }
}
